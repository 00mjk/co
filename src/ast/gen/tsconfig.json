{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "module": "amd",
    "moduleResolution": "node",
    "newLine": "LF",
    "target": "es2017",
    "inlineSourceMap": true,
    "removeComments": true,
    "lib": [ "es2017" ],
    "rootDir": "../../..",
    "outFile": ".main.js"
  },
  "include": [
    "../../global.d.ts",
    "main.ts"
  ]
}
