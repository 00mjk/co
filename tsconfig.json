{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "module": "esnext",
    "newLine": "LF",
    "target": "es2017",
    "sourceMap": true,
    "lib": [
      "dom",
      "es2017"
    ],
    "baseUrl": "src",
    "outDir": "dist"
  },
  "include": [
    "src/global.d.ts",
    "src/main.ts"
  ]
}
